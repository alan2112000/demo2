<div class="container">


  <!--nav-bar-->
  <div class="col-md-offset-4">
    <ul class="nav nav-pills">
      <li><%= link_to "Home", products_path, data: {toogle: "tab"} %></li>
      <% $categories=Category.all %>
      <% $categories.each do |c| %>
          <% if @product.category == c.name %>
              <li class="active"><%= link_to c.name, category_path(c), data: {toogle: "tab"} %></li>
          <% else %>
              <li><%= link_to c.name, category_path(c), data: {toogle: "tab"} %></li>
          <% end %>
      <% end %>
    </ul>
  </div>


  <div class="row clearfix">
    <div class="col-md-12 column">
      <div class="row clearfix">
        <div class="col-md-4 column">
          <%= render :partial => "common/sidebar", :locals => {:product => @product, :products => @products} %>

        </div>

        <!--product page -->
        <div class="col-md-8 column">
          <div class="row clearfix">
            <div class="col-md-12 column">
              <div class="row clearfix">
                <div class="col-md-12 column">
                </div>
              </div>
              <div class="row clearfix">
                <div class="col-md-6 column">
                  <!--Product title -->
                  <h3>
                   <%= @product.name %>
                  </h3>  <%= image_tag(@product.pic) %>
                </div>
                <div class="col-md-6 column">
                  <dl>
                    <dt>
                      商品簡介
                    </dt>
                    <dd>
                     <%= @product.description %>
                    </dd>
                    <dt>
                     商品介紹
                    </dt>
                    <dd>
                      <%= @product.long_des %>
                    </dd>
                  </dl>
                </div>
              </div>
            </div>
          </div>
          <div class="row clearfix">
            <div class="col-md-2 column">
            </div>
            <div class="col-md-6 column">
              <%= image_tag(@product.pic2) %>
            </div>
            <div class="col-md-4 column">
            </div>
          </div>
          <div class="row clearfix">
            <div class="col-md-2 column">
            </div>
            <div class="col-md-6 column">
              <%= image_tag(@product.pic3) %>
            </div>
            <div class="col-md-4 column">
            </div>
          </div>
          <div class="row clearfix">
            <div class="col-md-6 column">
              <%= raw  VideoInfo.new(@product.video_url).embed_code(iframe_attributes: { width: 800, height: 600, "data-key" => "value" }) %>
            </div>
            <div class="col-md-4 column">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>






