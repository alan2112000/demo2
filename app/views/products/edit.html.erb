<%= form_for @product, :url => product_path(@product), :method => :put do |f| %>
    <!--<% render :partial => 'form', :locals => { :f => f } %>-->


    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>
    <%= f.label :description, "Description" %>
    <%= f.text_area :description %>
    <%= f.label :category, "Category" %>
    <%= f.text_field :category %>
    <%= f.label :pic, "Picture Name" %>
    <%= f.text_field :pic %>
    <%= f.submit "Update" %>

<% end %>
