<div class="row">
  <% @products.each do |product| %>
      <div class="col-xs-6 col-sm-4 col-md-3">
        <div class="thumbnail">
          <%= image_tag(product.pic, class: "img-circle", height: "174", width: "180") %>
          <div class="caption">
            <h3><%= product.name %>  </h3>

            <p><%= product.description %></p>

            <p><a href="#" class="btn btn-primary" role="button">$xxxxx</a>
              <a href="#" class="btn btn-default" role="button">Read More</a></p>
          </div>
        </div>
        <p><%= link_to product.name, product_path(product) %></p>

        <p><%= link_to 'edit', edit_product_path(product) %></p>

        <p><%= button_to 'delete', product_path(product), :method => :delete %>

        <p>

      </div>

  <% end %>
  <%= link_to "New event", new_product_path %>
