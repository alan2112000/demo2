<div class="container">

  <div class="row">
    <div class="col-xs-6 col-sm-3 sidebar-offcanvas">
      <div class="list-group">
        <% @products.each do |product| %>
            <%= link_to product.name , product_path(product), class:"list-group-item" %>
            <% end %>
      </div>
    </div>
    <div class="col-xs-12 col-sm-9">
      <% @products.each do |product| %>
          <div class="col-xs-6 col-sm-4 col-md-3">
            <div class="thumbnail">
              <%= image_tag(product.pic, class: "img-circle", height: "174", width: "180") %>
              <div class="caption">
                <h3><%= product.name %>  </h3>

                <p><%= product.description %></p>

                <p><a href="#" class="btn btn-primary" role="button">$xxxxx</a>
                  <a href="#" class="btn btn-default" role="button">Read More</a></p>
              </div>
            </div>

            <!--<p><%= link_to product.name, product_path(product) %></p> -->
            <!--<p><%= button_to 'edit', edit_product_path(product) %></p>-->
            <!--<p><%= button_to 'delete', product_path(product), :method => :delete %> <p>-->
          </div>
      <% end %>
    </div>
  </div>
</div>